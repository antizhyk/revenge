{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // Дозволяє компілювати JavaScript файли
    "skipLibCheck": true, // Пропускає перевірку файлів оголошень бібліотек
    "strict": false, // Вимикає всі суворі перевірки
    "noImplicitAny": false,  // Не вимагає явного зазначення типу 'any' (але краще мати!)
    "noEmit": true, // Забороняє генерацію файлів (лише перевірка)
    "esModuleInterop": true, // Спрощує імпорт/експорт між модулями ES та CommonJS
    "module": "esnext", // Використовує сучасну систему модулів ES
    "moduleResolution": "bundler", // Використовує роздільник модулів, як у бандлерах (Webpack, Parcel)
    "resolveJsonModule": true, // Дозволяє імпортувати JSON файли
    "isolatedModules": true, // Ізолює модулі для швидшої компіляції
    "jsx": "preserve", // Залишає JSX без змін (для React)
    "incremental": true, // Вмикає інкрементальну компіляцію для пришвидшення наступних збірок
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
        // "suppressImplicitAnyIndexErrors": true // Приглушує помилки неявного 'any' при доступі до індексів
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}